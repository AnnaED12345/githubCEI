generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tarea {
  id          Int     @id @default(autoincrement())
  descripcion String
  usuario     Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId   Int
}

model Usuario {
  id       Int     @id @default(autoincrement())
  nombre   String  @unique
  password String
  tareas   Tarea[]
  isAdmin  Boolean
}
